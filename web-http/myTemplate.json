{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "willieweb-http",
    "annotations": {
      "iconClass": "icon-http",
      "description": "Willie's test for web-http"
    }
  },
  "labels": {
    "application": "willieweb-http",
    "createdBy": "willieweb-http-template"
  },
  "parameters": [
    {
      "description": "The name for the willieweb application.",
      "displayName": "Application Name",
      "name": "APPLICATION_NAME",
      "value": "willieweb-http",
      "required": true
    },
    {
      "description": "Custom hostname for willieweb application.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
      "displayName": "Application route",
      "name": "APPLICATION_HOSTNAME"
    }

  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "http"
      },
      "spec": {
        "tags": [
          {
            "name": "latest"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "build": "${APPLICATION_NAME}"
        }
      },
      "spec": { 
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "python:2.7"
            },
            "incremental": false
          }
        }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "component": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%",
            "post": {
              "failurePolicy": "Ignore",
              "execNewPod": {
                "command": [
                  "curl",
                  "-s",
                  "http://${APPLICATION_NAME}:28080/"
                ],
                "containerName": "${APPLICATION_NAME}"
              }
            }
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APPLICATION_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APPLICATION_NAME}:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "component": "${APPLICATION_NAME}"
        },
        "template": {
          "metadata": {
            "labels": {
              "component": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${APPLICATION_NAME}",
                "image": "${APPLICATION_NAME}",
                "ports": [
                  {
                    "containerPort": 28080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  }
                ],
                "resources": {},
                "livenessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 28080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 120,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 28080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 20,
                  "timeoutSeconds": 1,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 3
                },
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {}
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "component": "${APPLICATION_NAME}",
          "type": "parksmap-backend"
        },
        "annotations": {
          "service.alpha.openshift.io/dependencies": "[{\"name\":\"${MONGODB_APPLICATION_NAME}\",\"namespace\":\"\",\"kind\":\"Service\"}]"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "28080-tcp",
            "protocol": "TCP",
            "port": 28080,
            "targetPort": 28080
          }
        ],
        "selector": {
          "component": "${APPLICATION_NAME}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APPLICATION_NAME}",
        "labels": {
          "component": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "host": "${APPLICATION_HOSTNAME}",
        "to": {
          "kind": "Service",
          "name": "${APPLICATION_NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "28080-tcp"
        }
      }
    }
  ]
}

